<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.angersleek.stockstack.HomeActivity"
    android:padding="0dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageView"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        android:padding="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:columnCount="2"
        android:rowCount="4">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgV_View_Stock"
            android:minHeight="80dp"
            android:minWidth="140dp"
            android:nestedScrollingEnabled="false"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_margin="10dp"
            android:layout_marginTop="120dp"
            android:layout_marginLeft="45dp"
            android:onClick="switchActivity"
            android:maxHeight="80dp"
            android:maxWidth="140dp"
            android:src="@drawable/viewstocksmall" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgV__Barcode_Update"
            android:layout_row="0"
            android:layout_column="1"
            android:minHeight="80dp"
            android:minWidth="140dp"
            android:layout_marginTop="120dp"
            android:onClick="switchActivity"
            android:maxHeight="80dp"
            android:maxWidth="140dp"
            android:src="@drawable/bar_code_btn" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgV_Order_Stock"
            android:minHeight="80dp"
            android:minWidth="140dp"
            android:nestedScrollingEnabled="false"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_marginLeft="45dp"
            android:onClick="switchActivity"
            android:src="@drawable/orderstocksmall" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgV_Add_delete_Stock"
            android:layout_row="1"
            android:layout_column="1"
            android:src="@drawable/adddelsmall"
            android:minHeight="80dp"
            android:minWidth="140dp"
            android:onClick="switchActivity"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgV_Register_New_User"
            android:src="@drawable/registerusersmall"
            android:minHeight="80dp"
            android:minWidth="140dp"
            android:nestedScrollingEnabled="false"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_margin="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="45dp"
            android:onClick="switchActivity"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgV_Charts"
            android:layout_row="2"
            android:layout_column="1"
            android:src="@drawable/viewchartsmall"
            android:minHeight="80dp"
            android:minWidth="140dp"
            android:layout_marginTop="10dp"
            android:onClick="switchActivity"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgV_Empty1"
            android:src="#ff6600"
            android:minHeight="80dp"
            android:minWidth="140dp"
            android:nestedScrollingEnabled="false"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_marginLeft="45dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgV_Empty2"
            android:layout_row="3"
            android:layout_column="1"
            android:src="#ff6600"
            android:minHeight="80dp"
            android:minWidth="140dp" />
    </GridLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/company_logo"
        android:src="@drawable/company_logo"
        android:scaleType="fitStart"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp" />

</RelativeLayout>
